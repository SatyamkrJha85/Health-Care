<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/selfcarebg"
    android:layout_height="match_parent"
    tools:context=".Activity.OrderDetailsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Self Care Tips"
        android:textSize="25dp"
        android:fontFamily="sans-serif-medium"
        android:id="@+id/title"
        android:textColor="@color/white"
        android:layout_margin="15sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35sp"
        android:textStyle="bold"/>
   <ScrollView
       android:background="@drawable/corner_radius"
       android:layout_width="match_parent"
       android:padding="5dp"
       android:layout_below="@id/title"
       android:layout_above="@id/back_btn_to_main"
       android:layout_height="match_parent">
       <LinearLayout
           android:background="@drawable/corner_radius"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           >
           <ImageView
               android:background="@drawable/custom_edittext"
               android:adjustViewBounds="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/healthnew2"/>
           <ImageView
               android:background="@drawable/custom_edittext"
               android:adjustViewBounds="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/healthnew1"/>
           <ImageView
               android:background="@drawable/custom_edittext"
               android:adjustViewBounds="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/health1"/>
           <ImageView
               android:adjustViewBounds="true"
               android:layout_width="wrap_content"
               android:layout_margin="5dp"
               android:layout_height="wrap_content"
               android:src="@drawable/health2"/>
           <ImageView
               android:adjustViewBounds="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/h"/>
       </LinearLayout>
   </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Click to Back"
        android:layout_alignParentRight="true"
        android:background="@drawable/corner_radius"
        android:layout_margin="15dp"
        android:id="@+id/back_btn_to_main"/>

</RelativeLayout>
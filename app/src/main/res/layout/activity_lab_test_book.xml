<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LabTestBookActivity">
    <LinearLayout
        android:paddingTop="18sp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:padding="35dp">
        <TextView
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fill the all details for Booking"
            android:id="@+id/title_text_book"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/my_primary"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fullname_book"
            android:background="@drawable/custom_edittext"
            android:drawableLeft="@drawable/person"
            android:drawablePadding="8dp"
            android:padding="12dp"
            android:textColorHint="@color/black"
            android:hint="Full Name"
            android:textColor="@color/black"
            android:textColorHighlight="@color/cardview_dark_background"
            android:layout_marginTop="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Address_book"
            android:background="@drawable/custom_edittext"
            android:drawableLeft="@drawable/home"
            android:drawablePadding="8dp"
            android:padding="12dp"
            android:textColorHint="@color/black"
            android:hint="Address"
            android:textColor="@color/black"
            android:textColorHighlight="@color/cardview_dark_background"
            android:layout_marginTop="20dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contact_no_book"
            android:background="@drawable/custom_edittext"
            android:drawableLeft="@drawable/phone"
            android:drawablePadding="8dp"
            android:padding="12dp"
            android:textColorHint="@color/black"
            android:hint="Contact Number"
            android:textColor="@color/black"
            android:textColorHighlight="@color/cardview_dark_background"
            android:layout_marginTop="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pincode_booking"
            android:background="@drawable/custom_edittext"
            android:drawableLeft="@drawable/pincode"
            android:drawablePadding="8dp"
            android:padding="12dp"
            android:textColorHint="@color/black"
            android:hint="Fees"
            android:textColor="@color/black"
            android:textColorHighlight="@color/cardview_dark_background"
            android:layout_marginTop="20dp"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book"
            android:id="@+id/book_btn"
            android:layout_marginTop="30dp"
            android:textSize="18sp"
            android:backgroundTint="@color/my_primary"
            android:background="@drawable/corner_radius"/>


    </LinearLayout>

</LinearLayout>